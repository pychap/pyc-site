---
const { url, title, description } = Astro.props;
---
<div class="card max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:border-gray-700">
  <a href={url} class="flex">
      <img class="rounded-t-lg" src="https://docs.astro.build/assets/rays.webp" alt="" />
  </a>
  <div class="p-5">
      <a href={url}>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
      </a>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
      <button href={url} class="btn-custom">
          Read more
           <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
          </svg>
      </button>
  </div>
</div>
