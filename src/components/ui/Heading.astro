---
const headingOptions = {
  h1: "xxl",
  h2: "xl",
  h3: "lg",
  h4: "md",
  h5: "sm",
  h6: "xs",
};

const alignmentOptions = {
  left: "text-left",
  center: "text-center",
  right: "text-right",
};

type Props = {
  tagName: keyof typeof headingOptions;
  size: keyof typeof headingOptions;
  align: keyof typeof alignmentOptions;
};

const { tagName, size, align } = Astro.props;
const Tag = tagName;
---

<Tag class:list={["default", headingOptions[size], alignmentOptions[align]]}>
  <slot />
</Tag>

<style>
  .text-left {
    text-align: left;
  }
  .text-center {
    text-align: center;
  }
  .text-right {
    text-align: right;
  }
  .default {
    line-height: 1.3;
  }

  .xxl {
    font-size: var(--font-size-fluid-3);
  }
  .xl {
    font-size: var(--fs-xl);
  }
  .lg {
    font-size: var(--fs-lg);
  }
  .md {
    font-size: var(--fs-md);
  }
  .sm {
    font-size: var(--fs-sm);
  }
  .xs {
    font-size: var(--fs-xs);
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
